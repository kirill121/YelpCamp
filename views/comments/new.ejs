<% include ../partials/header %>

<div class='container'>
    <div class='row'>
        <h1 style='text-align: center;'>Add New Comment to <%= foundCampground.name %></h1>
        <div style='width: 30%; margin:30px auto;'>
            <form action='/campgrounds/<%= foundCampground.id %>/comments' method='post'>
                <div class='form-group'>
                    <input class='form-control' type='text' name='comment[text]' placeholder='text'>
                </div>
                <div class='form-group'>
                    <button class='btn btn-large btn-primary btn-block'>submit!</button>
                </div>
            </form>
            <a href='/campgrounds'>Go Back</a>
        </div>
    </div>
</div>

